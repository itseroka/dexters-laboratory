<p style="color: green"><%= notice %></p>

<div class="box">
<%= render @post %>
<%= @post.created_at.strftime("#{@post.created_at.day.ordinalize} %B %Y") %>
</div>

<div class="buttons">

  <%= button_to "Back to posts", posts_path, method: :get, type: :button, class: "button" %>

<% if user_session %>
  <%= button_to "Edit this post", edit_post_path(@post), method: :get, type: :button, class: "button"%>

  <%= button_to "Destroy this post", @post, method: :delete, type: :button, class: "button"%>
  <% end %>

</div>


<div class="box">
<i>Comments section</i>
<div><% @comments.each do |comment| %>
  <hr />
  <p><%= comment.author %></p>
  <p><%= comment.body %></p>
<% end %>
</div>
</div>

<%= render "comments/form", comment: @comment %>