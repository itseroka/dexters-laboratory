<%= form_with(model: [@post, @post.comments.new], local: true) do |form| %>

    <div class="field">
    <strong>
    <%= form.label :author %>
    </strong>
    <br />
    <%= form.text_field :author %>
    </div>

    <div class="field">
    <%= form.rich_text_area :body %>
    </div>

    <div class="buttons">
	<%= form.submit "Create comment", class: "button is-small" %>
    </div>

<% end %>

