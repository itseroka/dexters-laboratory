<%= form_with(model: [@post, @post.comments.new], local: true) do |form| %>

    <div class="field">
    <%= form.label :author %>
    <br />
    <%= form.text_field :author %>
    </div>

    <div class="field">
    <%= form.label :body %>
    <br />
    <%= form.text_area :body %>
    </div>
    <br />
    <div class="action">
	<%= form.submit %>
    </div>
<% end %>